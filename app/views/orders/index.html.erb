<div class="Order">
  <div class="OrderHeader">Order details</div>
  <div class="OrderBody">
    <% @user_cart.cart_items.each do |item| %>
      <div class="CartItem">
        <div class="CartItem-name">
          <%= item.menu_item.name %>
        </div>
        <div class="CartItem-price">
          <%= item.menu_item.price %>
        </div>
      </div>
    <% end %>
    <hr>
    <div class="CartTotal">
      <div>Total</div>
      <div>Rs. <%= @user_cart.total %></div>
    </div>
    <%= form_with(url: "/orders", method: "post") do |f| %>
      <% if @current_user.role == "customer" %>
        State: <%= f.text_field :state, value: @current_user.state, required: true %>
        <br />
        City: <%= f.text_field :city, value: @current_user.city, required: true %>
        <br />
        Address: <%= f.text_field :address, value: @current_user.address, required: true %>
        <br />
        Contact Number: <%= f.telephone_field :contact_no, value: @current_user.contact_no, required: true %>
        <br />
      <% end %>
      <%= submit_tag "Place Order", class: "AddToCart" %>
    <% end %>
  </div>
</div>
