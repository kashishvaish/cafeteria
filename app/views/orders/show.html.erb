<div class="MenuPageMain">
  <div class="MenuPage-header">
    <div class="MenuPage-title">Gourmet Cafeteria</div>
    <div class="MenuPage-controls">
      <% if @current_user %>
        <div class="username"><%= @current_user.name %></div>
        <div class="signout"><%= link_to "Sign-out", destroy_sessions_path, method: "delete" %></div>
      <% end %>
    </div>
  </div>
  <div class="OrderPage-container">
    <div class="OrderPage-heading">
      Orders ID: <%= @current_order.id %>
      <br/>
      Order Status: <%= @current_order.status %>
    </div>
    <div class="OrderPage-body">
      <table class="OrderHistory-table">
        <tr>
          <th>Item ID</th>
          <th>Item Name</th>
          <th>Item Price</th>
        </tr>
        <% @current_order.order_items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.menu_item_name %></td>
            <td><%= item.menu_item_price %></td>
          </tr>
        <% end %>
        <th>Total</th>
        <th></th>
        <th>Rs. <%= @current_order.total %></th>
      </table>
    </div>
  </div>
